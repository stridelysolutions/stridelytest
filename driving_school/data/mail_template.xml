<odoo>
   <data noupdate="0">
       <!--Email template -->
       <record id="email_template" model="mail.template">
           <field name="name">Attendance Correction Email</field>
           <field name="model_id" ref="driving_school.model_students_attendance"/>
           <field name="email_from">${ctx.get('email_from')}</field>
            <field name="email_to">${ctx.get('email_to')}</field>
           <field name="subject">Attendance Correction</field>
           <field name="auto_delete" eval="True"/>
           <field name="lang">${object.lang}</field>
           <field name="body_html"><![CDATA[
                <p>Hi</p>
                <br/>
                <p>Here is the details of open invoices</p>
                <br/>
                 ]]>
           </field>
       </record>

       <record id="email_template_reminder" model="mail.template">
           <field name="name">Driving Training </field>
           <field name="model_id" ref="driving_school.model_school_students"/>
           <field name="email_from">${ctx.get('email_from')}</field>
            <field name="email_to">${ctx.get('email_to')}</field>
           <field name="subject">Training </field>
           <field name="auto_delete" eval="True"/>
           <field name="lang">${object.lang}</field>
           <field name="body_html"><![CDATA[
                <p>Hi</p>
                <br/>
                <p>Today Your Driving School Traning .</p>
                <br/>
                 ]]>
           </field>
       </record>
   </data>
</odoo>
