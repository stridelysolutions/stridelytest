<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_students_view_form" model="ir.ui.view">
        <field name="name">wizard_students_view</field>
        <field name="model">driving_school.wizard_students</field>
        <field name="arch" type="xml">
            <form string="">
            <header>
                  <button name = "create_data" string="Add Lessons" class = "btn-primary" type="object"/>
            </header>
                <sheet>
                 <h2><label for="students_ids"/></h2>
                        <field name="students_ids">
                          
                             <tree editable="bottom">
                                 <field name="title" />
                                 <field name="name" />
                                 <field name="middle_name" />
                                 <field name="last_name" />
                                 <field name="blood_group" />
                                 <field name="emergency_contact" />
                                 <field name="nationality" />
                                 <field name="language" />
                             </tree>

                        </field>                            
                </sheet>
            </form>
        </field>
    </record>

    <record id="wizard_students_view_action" model="ir.actions.act_window">
            <field name="name">Add Lessons</field>
            <field name="res_model">driving_school.wizard_students</field>
            <field name="view_mode">form,tree</field>
            <field name="target">new</field>
    </record>
</odoo>
