<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_view_form" model="ir.ui.view">
        <field name="name">invoice.view.form</field>
        <field name="model">driving_school.wizard_invoice</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="amount" />
                    </group>
                </sheet>
                <footer> 
                     <button string="Create Invoice" name="create_invoice" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="wizard_invoice_view_action" model="ir.actions.act_window">
            <field name="name">Add Amount</field>
            <field name="res_model">driving_school.wizard_invoice</field>
            <field name="view_mode">form,tree</field>
            <field name="target">new</field>
    </record>
</odoo>
