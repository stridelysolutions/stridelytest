<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       
       <record id="students_view_form" model="ir.ui.view">
           <field name="name">students.view.form</field>
           <field name="model">school.students</field>
           <field name="arch" type="xml">
               <form string="">
                   <sheet>
                   <div class="oe_button_box" name="button_box">
                        <button 
                           name="count_lessons_number" 
                           type="object" 
                           class = "oe_stat_button"  
                           icon="fa-bars" >
                            <div class = "o_stat_info">
                                <field name="count_data" class = "o_stat_value" />
                                <span class="o_stat_text">Lessons</span>
                            </div>
                        </button>
                    </div>
                    <field name="image" widget="image" class='oe_avatar float-right'/>
                    <h1><field name="name" /> <field name="last_name" /></h1>
                    <notebook>
                              <page name="Personal Info" string="Personal Info">
                                  <group>
                                    <group>
                                          <field name="email" />
                                          <field name="blood_group" />
                                          <field name="gender" />
                                          <field name="emergency_contact" />
                                    </group>
                                    <group>
                                        <field name="nationality" />
                                        <field name="language" />
                                        <field name="user" />
                                        <field name="check" 
                                           groups='driving_school.group_data_driving_school'/>
                                    </group>
                                </group>
                              </page>
                              <page name="Lessons" string="Lessons">
                                  <group>
                                      <field name="lessons" />
                                    </group>
                              </page>
                    </notebook>          
                    </sheet>
               </form>
           </field>
       </record>
       
       <record model="ir.actions.act_window" id="driving_school_students_action_window">
            <field name="name">Students</field>
            <field name="res_model">school.students</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <menuitem 
            name="Students" 
            id="driving_school.menu_6" 
            parent="driving_school.menu_root" 
            sequence="1"
            action="driving_school_students_action_window"/>
    </data>
</odoo>
