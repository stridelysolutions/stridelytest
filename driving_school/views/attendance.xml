<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="attendance_view_pivot" model="ir.ui.view">
            <field name="name">attendance.view.pivot</field>
            <field name="model">students.attendance</field>
            <field name="arch" type="xml">
                <pivot>
                </pivot>
            </field>
    </record>
    
    <record id="attendance_view_search" model="ir.ui.view">
        <field name="name">attendance.view.search</field>
        <field name="model">students.attendance</field>
        <field name="arch" type="xml">
            <search string="">
                <group string="Group By">
                    <filter name="lessons_name"  context="{'group_by': 'lessons_name'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="attendance_view_kanban" model="ir.ui.view">
        <field name="name">model_name.view.kanban</field>
        <field name="model">students.attendance</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="state" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="attendance" />
                <templates>
                    <t t-name="kanban-box">
                         <div class="oe_kanban_global_click oe_kanban_card">
                              <div class="oe_kanban_details">
                                    <t t-if = "record.attendance.value == 'Present'">
                                        <div 
                                          class="float-right" 
                                          style="background-color: green; color:white; ">
                                          <field name="attendance" />
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div 
                                            class="float-right" 
                                            style="background-color: red; color:white; ">
                                            <field name="attendance" />
                                         </div>
                                    </t>
                                    <strong><field name="name" /></strong>
                                    <div><strong><field name="lessons_name" /></strong></div>
                                    <span><field name="start_date" /> - <field name="end_date" /></span>
                              </div>
                         </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="attendance_view_form" model="ir.ui.view">
        <field name="name">attendance.view.form</field>
        <field name="model">students.attendance</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="lessons_name" />
                        <field name="email" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="attendance_action_window">
                <field name="name">Attendance</field>
                <field name="res_model">students.attendance</field>
                <field name="view_mode">tree,kanban,pivot,search,graph,form</field>
                <field name="context">{'search_default_lessons_name':1}</field>
                <field name="domain"></field>
    </record>

    <menuitem 
      name="Attendance" 
      id="driving_school.menu_10" 
      parent="driving_school.menu_root" 
      sequence="6"
      action="attendance_action_window"/>
</odoo>
