<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data>
        <record
            model="ir.ui.view"
            id="view_res_settings_inherit"
            >
            <field name="name">res.config.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//div[@id='recaptcha']" position="after">
                     <div class="col-12 col-lg-6 o_setting_box" id="whatsapp">
                                <div class="o_setting_left_pane">
                                    <field name="whats_app"/>
                                </div>
                                <div class="o_setting_right_pane" id="whatsapp_settings">
                                    <label for="whats_app"/>
                                    <div class="text-muted">
                                        Whats App 
                                    </div>
                                    <div class="content-group" id="whats_app_id">
                                        <div class="mt16 row">
                                            <label for="token_key" string="Access Token" class="col-3 o_light_label"/>
                                            <field name="token_key" />
                                            <label for="end_point" string="End Point" class="col-3 o_light_label"/>
                                            <field name="end_point" />
                                        </div>
                                    </div>
                                    <div class="content-group" attrs="{'invisible': [('whats_app', '=', False)]}" id="whatsapp_warning">
                                        <div class="mt16 text-warning"><strong>Save</strong> this page and come back here to set up Whats App.</div>
                                    </div>
                                </div>
                            </div>
                 </xpath>
            </field>
        </record>
     </data>
</odoo>
