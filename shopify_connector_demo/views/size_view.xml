<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="size_view_tree" model="ir.ui.view">
            <field name="name">size.product.tree</field>
            <field name="model">size.product</field>
            <field name="arch" type="xml">
                <tree string="size">
                    <field name="size"/>
                </tree>
            </field>
        </record>
        
        <record id="size_view_action" model="ir.actions.act_window">
            <field name="name">Product size</field>
            <field name="res_model">size.product</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="size_menu"
            name="size"
            parent = "varients_menu"
            action = "size_view_action"
            />
    </data>
</odoo>
